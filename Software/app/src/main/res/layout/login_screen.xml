<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/screen"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_x="106dp"
            android:layout_y="30dp"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/email"
            style="@style/Round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_x="4dp"
            android:layout_y="153dp"
            android:drawableLeft="@drawable/email_icon"
            android:ems="10"
            android:hint="Email"
            android:singleLine="true"
            android:textColor="@color/night" 
            android:inputType="textEmailAddress">

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/password"
            style="@style/Round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_x="0dp"
            android:layout_y="201dp"
            android:drawableLeft="@drawable/lock"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/night"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/login_error"
            style="@style/PHS.TextError"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_x="4dp"
            android:layout_y="243dp"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp" >

        <Button
            android:id="@+id/buttonSignIn"
            style="@style/button"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_x="21dp"
            android:layout_y="274dp"
            android:text="Sign In" />

        <Button
            android:id="@+id/forgot_pass"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:clickable="true"
            android:padding="5dp"
            android:text="Forgot Password?"
            android:textStyle="bold"
            android:textColor="@color/clickable"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="15dp"
            android:layout_x="12dp"
            android:layout_y="341dp"
            android:text="I don&apos;t have account."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text" />

        <Button
            android:id="@+id/btnLinkToRegisterScreen"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_x="168dp"
            android:layout_y="338dp"
            android:background="@null"
            android:clickable="true"
            android:padding="5dp"
            android:text="Register"
            android:textStyle="bold"
            android:textColor="@color/clickable"
            android:textColorHighlight="@color/text"  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp" >

        <Button
            android:id="@+id/gallery"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_x="21dp"
            android:layout_y="380dp"
            android:background="@null"
            android:clickable="true"
            android:padding="5dp"
            android:text="Gallery"
            android:textStyle="bold"
            android:textColor="@color/clickable"
            android:textColorHighlight="@color/text"  />

        <Button
            android:id="@+id/news_feeds"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="15dp"
            android:layout_x="168dp"
            android:layout_y="382dp"
            android:background="@null"
            android:clickable="true"
            android:padding="5dp"
            android:text="News Feeds"
            android:textStyle="bold"
            android:textColor="@color/clickable"
            android:textColorHighlight="@color/text"  />
    </LinearLayout>

</LinearLayout>