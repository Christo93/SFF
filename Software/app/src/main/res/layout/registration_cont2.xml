<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backscreen" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backscreen"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/btnLinkToRegisterScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_x="96dp"
            android:layout_y="30dp"
            android:text="Registration"
            android:textColor="@color/titles"
            android:textSize="30dip"
            android:textStyle="bold" />

    </LinearLayout>

    <AbsoluteLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/mem_opt"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_weight="44.99"
            android:layout_x="22dp"
            android:layout_y="24dp"
            android:text="Member Option"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/titles"
            android:textStyle="bold"
            android:typeface="serif" />

        <Spinner
            android:id="@+id/member_opt"
            android:layout_width="170dp"
            android:layout_height="93dp"
            android:layout_marginBottom="6dp"
            android:layout_x="121dp"
            android:layout_y="18dp"
            android:background="@color/text"
            android:entries="@array/member_opt" />

    </AbsoluteLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/sec_quest"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="211.72"
            android:layout_x="22dp"
            android:layout_y="189dp"
            android:text="Secret Question"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/titles"
            android:textStyle="bold"
            android:typeface="serif" />

        <Spinner
            android:id="@+id/secret_quest"
            android:layout_width="274dp"
            android:layout_height="91dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_x="20dp"
            android:layout_y="228dp"
            android:background="@color/text"
            android:entries="@array/secret_quest" />

        <EditText
            android:id="@+id/secret_ans"
            style="@style/Round_text"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_x="19dp"
            android:layout_y="302dp"
            android:ems="10"
            android:hint="Secret Answer" 
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/register_error"
            style="@style/PHS.TextError"
            android:layout_width="268dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_x="12dp"
            android:layout_y="354dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp" >

        <Button
            android:id="@+id/btnBack2"
            style="@style/button"
            android:layout_width="116dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:layout_x="25dp"
            android:layout_y="405dp"
            android:background="@drawable/button"
            android:text="Back" />

        <Button
            android:id="@+id/btnRegister"
            style="@style/button"
            android:layout_width="116dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:layout_x="174dp"
            android:layout_y="403dp"
            android:background="@drawable/button"
            android:text="@string/btn_register" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.94"
            android:layout_x="53dp"
            android:layout_y="513dp"
            android:text="Already registred. "
            android:textColor="@color/text"
            android:textSize="12dp" />

        <Button
            android:id="@+id/btnLinkToLoginScreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:layout_x="176dp"
            android:layout_y="496dp"
            android:background="@null"
            android:clickable="true"
            android:padding="5dp"
            android:textColor="@color/clickable"
            android:shape="line"
            android:text="Login!" />
    </LinearLayout>
</LinearLayout>

</ScrollView>